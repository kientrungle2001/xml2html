    <?php require BASE_DIR . '/sper/style.xml'; ?>

    <modal id="loginModal" ng-controller="Sper.Account.Login">
        <modal.dialog size="sm">
            <modal.content>
                <modal.header pd="0">
                    <modal.title class="clearfix relative">
                        <p class="text-center mg-0 pd-1 w-100-p">Đăng nhập</p>
                        <btn.close data-dismiss="modal" class="absolute p-top-5 p-right-5">
                            <icon symbol="remove-circle" />
                        </btn.close>
                    </modal.title>
                </modal.header>
                <modal.body>
                    <form ng-submit="login()">
                        <form.group>
                            <static.form.control ng-show="error.message" class="bg-danger pd-3 text-white">%%error.message%%</static.form.control>
                        </form.group>
                        <form.group ng-class="{'has-error': error.username}">
                            <input.form.control placeholder="Tên đăng nhập" ng-model="username" />
                        </form.group>
                        <form.group ng-class="{'has-error': error.password}">
                            <input.form.control type="password" placeholder="Mật khẩu" ng-model="password" />
                        </form.group>
                        <form.group>
                            <clearfix>
                                <pull.left>
                                    <checkbox value="1" ng-model="remember" /> Lưu mật khẩu
                                </pull.left>
                                <pull.right>
                                    <a href="#" onclick="jQuery('#forgotPasswordModal').modal('show');" data-dismiss="modal">Quên mật khẩu</a>
                                </pull.right>
                            </clearfix>
                        </form.group>
                        <form.group>
                            <btn.success class="btn-block">Đăng nhập</btn.success>
                        </form.group>
                        <form.group>
                            <p class="text-center" pd="3">Đăng nhập bằng</p>
                        </form.group>
                        <form.group>
                            <input.group>
                                <input.group.addon class="login-icon bg-google-phone"><fa.1x symbol="phone" /></input.group.addon>
                                <btn.success class="btn-block">
                                Đăng nhập bằng điện thoại
                                </btn.success>
                            </input.group>
                        </form.group>
                        <form.group>
                            <input.group>
                                <input.group.addon class="login-icon bg-google-facebook"><fa.1x symbol="facebook" /></input.group.addon>
                                <btn.primary class="btn-block">
                                Đăng nhập bằng Facebook
                                </btn.primary>
                            </input.group>
                        </form.group>
                        <form.group>
                            <input.group>
                                <input.group.addon class="login-icon bg-google-plus"><fa.1x symbol="google-plus" /></input.group.addon>
                                <btn.danger class="btn-block">
                                Đăng nhập bằng Google Plus
                                </btn.danger>
                            </input.group>
                        </form.group>
                        <form.group>
                            <p class="text-center">
                                Bạn chưa có tài khoản? <a href="#" data-toggle="modal" data-target="#registerModal" data-dismiss="modal">Đăng ký</a>
                            </p>
                        </form.group>
                    </form>
                </modal.body>
            </modal.content>
        </modal.dialog>
    </modal>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js" 
