<root>
    <col md="3" ng-repeat="item in items">
        <panel mb="2">
            <panel.heading pd="0">
                <a href="/news/detail?article_id=%%item.id%%">
                    <embed.responsive size="16by9">
                        <img.responsive src="%%item.article_img%%" />
                    </embed.responsive>
                </a>
            </panel.heading>
            <panel.body>
                <a href="/news/detail?article_id=%%item.id%%">
                    <small class="fs-12" style="height: 30px; overflow: hidden; display: block; text-align: justify;">%%item.article_title%%</small>
                </a>
            </panel.body>
            <panel.footer>
                <media>
                    <media.left>
                        <media.object src="http://placehold.it/36x36" class="img-circle" />
                    </media.left>
                    <media.body>
                        <strong class="fs-12">Thu Phuong</strong>
                        <small class="fs-12">%%item.created_at%%</small>
                    </media.body>
                </media>
            </panel.footer>
        </panel>
    </col>
</root>