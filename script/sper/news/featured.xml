<root>
    <thumbnail pd="0" class="relative" ng-repeat="item in items">
        <embed.responsive size="16by9">
            <thumbnail.img src="%%item.article_img%%" />
        </embed.responsive>
        <thumbnail.caption class="absolute p-bottom-0 w-100-p">
            <a href="/news/detail?article_id=%%item.id%%">
                <div class="relative">
                    <h2 class="text-center pd-3 bd-2 b-r-3 fs-18 text-white text-bold" style="top: 0; left: 0; opacity: 0.7; z-index: 1; background: #333;"><span class="visibility: hidden;">%%item.article_title%%</span></h2>
                </div>
            </a>
        </thumbnail.caption>
    </thumbnail>
</root>
