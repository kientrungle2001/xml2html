<root>
    <col md="4" sm="6" ng-repeat="product in products">
        <panel mb="3">
            <panel.heading pd="0">
                <img.responsive src="http://placehold.it/480x360" />
            </panel.heading>
            <panel.body>
                <a href="/clientarea/product?prodid=%%product.prodid%%"><h4>%%product.prodcode%%</h4></a>
                <address>%%product.proddesc%%</address>
            </panel.body>
            <panel.footer>
                <clearfix>
                    <pull.left>
                        <far symbol="heart" size="1x" /> %%product.countLike%%
                        <far symbol="comments" size="1x" /> %%product.listComment.length%%
                        <fa.1x symbol="share-alt" size="1x" /> %%product.countShare%%
                    </pull.left>
                    <pull.right>
                        <icon symbol="trash" ng-click="delete(product)" />
                    </pull.right>
                </clearfix>
                <clearfix>
                    <a href="/clientarea/product?prodid=%%product.prodid%%">Xem chi tiáº¿t</a>
                </clearfix>
            </panel.footer>
        </panel>
    </col>
</root>