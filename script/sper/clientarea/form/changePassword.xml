<root>
    <form.horizontal>
        <form.group ng-show="showMessage">
            <col md="9" mdo="3">
                <static.form.control pd="3" ng-class="{'bg-success': success, 'bg-danger': !success}">%%message%%</static.form.control>
            </col>
        </form.group>
        <form.group>
            <control.label class="col-md-3">Mật khẩu cũ</control.label>
            <col md="9">
                <input.form.control ng-model="oldPassword" />
            </col>
        </form.group>
        <form.group>
            <control.label class="col-md-3">Mật khẩu mới</control.label>
            <col md="9">
                <input.form.control ng-model="newPassword" />
            </col>
        </form.group>
        <form.group>
            <control.label class="col-md-3">Nhập lại Mật khẩu mới</control.label>
            <col md="9">
                <input.form.control ng-model="confirmNewPassword" />
            </col>
        </form.group>
        <form.group>
            <col md="9" mdo="3">
                <btn.default>Hủy bỏ</btn.default>
                <btn.success ng-click="update()">Đồng ý</btn.success>
            </col>
        </form.group>
    </form.horizontal>
</root>