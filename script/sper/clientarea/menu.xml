<root>
    <panel>
        <panel.heading pd="0" ng-controller="Sper.ClientArea.User">
            <thumbnail mg="0">
                <a href="/clientarea/info">
                    <thumbnail.img src="%% user.avatar || 'http://placehold.it/64x64' %%" class="img-circle" style="width: 64px; height: auto;" />
                </a>

                <thumbnail.caption class="text-center">
                    <a href="/clientarea/info">%%user.fullname%%</a><br />
                    <small>%%user.email%%</small>
                </thumbnail.caption>
            </thumbnail>
        </panel.heading>
        <listgroup class="account-menu">
            <listgroup.item class="active"><a href="/clientarea/info"><fa symbol="user" /> Thông tin tài khoản</a></listgroup.item>
            <listgroup.item><a href="/clientarea/changepassword"><fa symbol="user" /> Đổi mật khẩu</a></listgroup.item>
            <listgroup.item><a href="/clientarea/trophy"><fa symbol="trophy" /> Điểm thưởng</a></listgroup.item>
            <listgroup.item><a href="/clientarea/payment"><fa symbol="credit-card" /> Thanh toán</a></listgroup.item>
            <listgroup.item><a href="/clientarea/collection"><fa symbol="bookmark" class="bookmark-scale" /> Bộ sưu tập</a></listgroup.item>
            <listgroup.item><a href="/clientarea/service"><fa symbol="cubes" /> Dịch vụ của bạn</a></listgroup.item>
            <listgroup.item><a href="/clientarea/privilege"><fa symbol="user" /> Phân quyền chi nhánh</a></listgroup.item>
            <listgroup.item><a href="/clientarea/feedback"><fa symbol="inbox" /> Góp ý</a></listgroup.item>
            <listgroup.item><a href="/clientarea/history"><fa symbol="history" /> Lịch sử</a></listgroup.item>
            <listgroup.item><a href="/logout"><fa symbol="power-off" /> Thoát</a></listgroup.item>
        </listgroup>
        <panel.footer pd="0">
        <btn.success class="btn-block" tag="a" href="/clientarea/createservice">
            Tạo dịch vụ
        </btn.success>
        </panel.footer>
    </panel>
</root>