<root>
    <col md="3" ng-repeat="item in items">
        <panel mb="2">
            <panel.heading pd="0">
                <embed.responsive size="16by9">
                <img.responsive src="%%item.review_img%%" />
                </embed.responsive>
            </panel.heading>
            <panel.body style="height: 80px; overflow: hidden;">
                <a href="#"><small>%%item.review_title%%</small></a>
                <clearfix class="hide">
                    <pull.left><icon symbol="map-marker" /> 2 chi nhanh</pull.left>
                    <pull.right>To doi</pull.right>
                </clearfix>
            </panel.body>
            <panel.footer>
                <clearfix>
                    <pull.left>
                        <far symbol="heart" size="1x" /> %%item.review_likes%%
                        <far symbol="comments" size="1x" /> %%item.review_comments%%
                        <fas symbol="share-alt" size="1x" /> %%item.review_shares%%
                    </pull.left>
                    <pull.right>
                        <fa.1x symbol="bookmark" ng-click="bookmark(item)" class="pointer" />
                    </pull.right>
                </clearfix>
            </panel.footer>
        </panel>
    </col>
</root>