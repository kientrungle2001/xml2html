<root>
    <col md="15" ng-repeat="service in services" class="service-item">
        <panel mb="2">
            <panel.heading pd="0">
                <embed.responsive size="4by3" style="overflow:hidden;">
                <img.responsive ng-src="%%service.serviceimg%%" />
                </embed.responsive>
            </panel.heading>
            <panel.body>
                <a href="#" class="service-heading"><h4>%%service.servicename%%</h4></a>
                <address class="service-address">%%service.address_identifier.addressname%%</address>
                <clearfix>
                    <pull.left><icon symbol="map-marker" /> 2 chi nhanh</pull.left>
                    <pull.right>%%selectedCategory.categoryname%%</pull.right>
                </clearfix>
            </panel.body>
            <panel.footer>
                <clearfix>
                    <pull.left>
                        <fa.1x symbol="heart-o" /> 200
                        <fa.1x symbol="comments-o" /> 200
                        <fa.1x symbol="share-alt" /> 200
                    </pull.left>
                    <pull.right>
                        <fa.1x symbol="bookmark" />
                    </pull.right>
                </clearfix>
            </panel.footer>
        </panel>
    </col>
</root>