<root>
    <media.list.item ng-repeat="blog in blogs" class="d-table w-100-p">
        <media.left>
            <media.object src="http://placehold.it/64x64" class="img-circle" />
        </media.left>
        <media.body>
            <media.heading>
                My Tran
            </media.heading>
            <clearfix>
                <pull.left>
                    Chia sẻ blog - 04/06/2018 - 19:03
                </pull.left>
                <pull.right>
                    <btn.success>
                        <icon symbol="bookmark" /> Lưu bài blog
                    </btn.success>
                </pull.right>
            </clearfix>
            <strong>
                %%blog.blog_title%%
            </strong>
        </media.body>
        
    </media.list.item>
</root>