<root>
    <media.list.item ng-repeat="blog in items">
        <media.left>
            <media.object src="http://placehold.it/80x80" />
        </media.left>
        <media.body>
            <media.heading style="height: 20px; overflow: hidden;">
                %%blog.blog_title%%
            </media.heading>
            <clearfix style="height: 60px; overflow: hidden;">
                %%blog.blog_content%%
            </clearfix>
        </media.body>
    </media.list.item>
</root>