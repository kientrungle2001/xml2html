<root>
    <media.list.item ng-repeat="blog in items" bb="1" pb="3">
        <media.left>
            <embed.responsive size="4by3">
                <media.object src="%%blog.blog_img%%" style="max-width: 120px;" />
            </embed.responsive>
        </media.left>
        <media.body>
            <media.heading style="height: 20px; overflow: hidden;">
                <a href="/blog/detail?blog_id=%%blog.id%%">%%blog.blog_title%%</a>
            </media.heading>
            <clearfix style="height: 60px; overflow: hidden;">
                %%blog.blog_content%%
            </clearfix>
        </media.body>
    </media.list.item>
</root>
