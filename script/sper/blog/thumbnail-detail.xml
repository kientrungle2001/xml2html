<root>
    <col md="3" ng-repeat="item in items">
        <panel mb="2">
            <panel.heading pd="0">
                <embed.responsive size="16by9">
                    <img.responsive src="%%item.blog_img%%" />
                </embed.responsive>
            </panel.heading>
            <panel.body>
                <a href="/blog/detail?blog_id=%%item.id%%">
                <small class="d-block fs-12" style="height: 35px; overflow:hidden;text-align: justify;">%%item.blog_title%%</small>
                </a>
            </panel.body>
            <panel.footer>
                <media>
                    <media.left>
                        <media.object src="http://placehold.it/36x36" class="img-circle" />
                    </media.left>
                    <media.body>
                        <strong class="fs-12">Thu Phuong</strong>
                        <small class="fs-12 text-light">%%item.created_at%%</small>
                    </media.body>
                </media>
            </panel.footer>
        </panel>
    </col>
</root>